# Depends on: libxslt libxml2 python cython

description="Python binding for the libxml2 and libxslt libraries"
url="http://lxml.de/"
packager="tnut@nutyx.org>"
contributors="Greg"

name=python-lxml
version=4.3.2

source=(https://lxml.de/files/lxml-$version.tgz)

	
build() {
export LC_ALL=en_US.utf8

cd lxml-$version
python3 setup.py build
python3 setup.py install --root=$PKG --skip-build --optimize=1
}
