description="Time-stretching and pitch-shifting audio library and utility"
url="http://www.breakfastquay.com/rubberband/"

packager="Yaolinux Team"
maintainer="rems"

makedepends=(ladspa libsamplerate fftw vamp-plugin-sdk openjdk)

name=rubberband
version=1.8.2

source=(http://code.breakfastquay.com/attachments/download/34/$name-$version.tar.bz2)

prepare() {

cd $name-$version
autoreconf -fiv
}

build() {

cd $name-$version

export JAVA_HOME="/opt/jdk"

./configure --prefix=/usr

make
make jni

make DESTDIR=$PKG install
}
