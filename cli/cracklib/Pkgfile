packager="Yaolinux Team"
maintainer="sipo"

description="Password Checking Library"
url="https://github.com/cracklib/cracklib"

name=cracklib
version=2.9.7

source=(https://github.com/cracklib/cracklib/releases/download/v$version/cracklib-$version.tar.bz2)

build(){

  cd $name-$version
  ./configure --prefix=/usr    \
              --disable-static \
              --with-default-dict=/lib/cracklib/pw_dict \
              --without-python
  make
  
}


package() {

  cd $name-$version
  make DESTDIR=$PKG install
}
