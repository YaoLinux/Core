description="Independent Open DataBase Connectivity for Linux"
url="http://www.iodbc.org"

packager="Yaolinux Team"
maintainer="rems"

name=libiodbc
version=3.52.13

PKGMK_KEEP_SOURCES="no"

source=(https://codeload.github.com/openlink/iODBC/tar.gz/v$version/iODBC-$version.tar.gz)

build() {

cd iODBC-$version
./configure --prefix=/usr \
            --disable-static \
            --includedir=/usr/include/libiodbc \
            --disable-gui \
            --disable-libodbc 

make
make DESTDIR=$PKG install

rm -rf $PKG/usr/share/libiodbc/

# Obsolets libs
rm $PKG/usr/lib/libiodbc{,inst}.la
}
