# Depends on: flex bison


packager="sipo"
contributors=""
maintainer="sipo"


description="ACPI tools, including Intel ACPI Source Language compiler"
url="https://acpica.org"


name=acpica
version=20190108
release=2


source=(https://acpica.org/sites/acpica/files/$name-unix-$version.tar.gz)


build(){
  cd acpica-unix-${version}
  make
}

package() {
  cd acpica-unix-${version}
  make DESTDIR=${PKG} install
}
