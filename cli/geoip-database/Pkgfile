packager="Yaolinux Team"
maintainer="sipo"

description="GeoLite2 IP geolocation databases compiled by MaxMind"
url="http://www.maxmind.com/app/c"

name=geoip-database
version=20191001

source=(https://geolite.maxmind.com/download/geoip/database/GeoLite2-City.tar.gz)

build() {

  cd GeoLite2-City_${version}

  install -d "$PKG/usr/share/GeoIP"
  install -m644 -t "$PKG/usr/share/GeoIP" GeoLite2-City.mmdb
}
