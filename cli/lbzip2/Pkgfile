makedepends=(gnulib)

packager="Yaolinux Team"
maintainer="sipo"

description="A parallel, SMP-based, bzip2-compatible compression utility"
url="http://lbzip2.org"

name=lbzip2
version=2.5
release=2

source=(http://rems.techozor.fr/sources.RC1/lbzip2-$version.tar.bz2)

build(){

  cd $name-$version
 
 ./build-aux/autogen.sh -r
 ./build-aux/autogen.sh
 
  ./configure --prefix=/usr
  make
}

package() {

  cd $name-$version
 
  make DESTDIR="${PKG}" install
}
