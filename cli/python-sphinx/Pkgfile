makedepends=(python-docutils python-jinja python-six python-imagesize python-snowballstemmer)
 
description="python 2&3 documentation generator"
url="http://www.sphinx-doc.org/"

packager="Yaolinux Team"
maintainer="rems"

name=python-sphinx
version=2.2.0

source=(https://pypi.org/packages/source/S/Sphinx/Sphinx-$version.tar.gz)

run=(python python-docutils python-jinja python-six python-imagesize python-snowballstemmer)

build() {

cd Sphinx-$version

make PYTHON=python3 build
python3 setup.py install --root="$PKG" --optimize=1
}
