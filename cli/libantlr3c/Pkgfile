# Depends on:


packager="sipo"
contributors="Fanch, Tnut"
maintainer="sipo"


description="C runtime for the ANTLR parsing library"
url="http://www.antlr.org/"


name=libantlr3c
version=3.5.2


PKGMK_KEEP_SOURCES="no"


source=(https://github.com/antlr/antlr3/archive/$version.tar.gz)


prepare(){

    cd antlr3-$version/runtime/C
cat <<EOF> antlr3config.h.in
#include <stdint.h>
#include <stdarg.h>
#include <stdlib.h>
#include <netinet/in.h>
#include <netinet/tcp.h>
#include <sys/stat.h>
#include <sys/socket.h>
#include <antlr3defs.h>
EOF

    aclocal
    libtoolize
    automake --add-missing
    autoconf

}


build() {

    cd antlr3-$version/runtime/C
    ./configure --prefix=/usr --sysconfdir=/etc --enable-64bit
    make	

}


package() {

    cd antlr3-$version/runtime/C
    make DESTDIR=$PKG install
# Obsolet lib
    rm $PKG/usr/lib/libantlr3c.la

}
