makedepends=(boost python2)

description="A C++ BitTorrent library that aims to be a good alternative to all the other implementations around"
url="http://www.rasterbar.com/products/libtorrent/"

maintainer="rems"
packager="Yaolinux Team"

name=libtorrent-rasterbar
version=1.2.4
_version=${version//./_}

source=(https://github.com/arvidn/libtorrent/releases/download/libtorrent-${_version}/$name-$version.tar.gz)

build() {

mkdir -v py2 py3
  cd $name-$version

sed -i 's/-msse4.2//' configure.ac

autoreconf -iv

cp -a * ../py2
cp -a * ../py3

cd ../py2

_boost="boost_python"

CXXFLAGS="$CXXFLAGS -std=c++11" \
  PYTHON=/usr/bin/python2 \
  ../$name-$version/configure --prefix=/usr \
                              --enable-python-binding \
                              --enable-examples \
                              --disable-static \
                              --with-libiconv \
                              --with-boost-python=$_boost

make
make DESTDIR=$PKG install

unset _boost

cd ../py3

_boost="boost_python3"

CXXFLAGS="$CXXFLAGS -std=c++11" \
  PYTHON=/usr/bin/python3 \
  ../$name-$version/configure --prefix=/usr \
                                                 --enable-python-binding \
                                                 --enable-examples \
                                                 --disable-static \
                                                 --with-libiconv \
                                                 --with-boost-python=$_boost
make
make DESTDIR="$PKG" install

rm "$PKG"/usr/bin/{*_test,*_tester,simple_client,stats_counters}

# Obsolet lib
rm $PKG/usr/lib/libtorrent-rasterbar.la
}
