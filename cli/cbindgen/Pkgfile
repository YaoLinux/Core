# Depends on: rustc git


packager="sipo"
contributors="Tnut"
maintainer="sipo"


description="A tool for generating C bindings to Rust code"
url="https://github.com/eqrion/cbindgen"


name=cbindgen
version=git
release=2


source=()


prepare(){

git clone https://github.com/eqrion/cbindgen

}


build(){
  cd $name
  cargo build --release
}


package() {
  cd $name
  install -Dt "$PKG/usr/bin" target/release/cbindgen
  install -Dt "$PKG/usr/share/doc/$name" -m644 README.md
}
