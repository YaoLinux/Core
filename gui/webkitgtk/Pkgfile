makedepends=(enchant cmake gstreamer-plugins-base gstreamer-plugins-bad xorg-libxt gtk2 gtk3 gtk-doc hunspell hyphen icu libgudev libsecret libsoup libwebp mesa ruby sqlite enchant geoclue2 gobject-introspection hicolor-icon-theme llvm harfbuzz gtk-doc libnotify wayland woff2 libwpe)

description="engine of made Web free for the browsers web version 3"
url="http://webkitgtk.org/"

packager="Yaolinux Team"
maintainer="rems"

name=webkitgtk
version=2.26.1

source=(http://webkitgtk.org/releases/webkitgtk-$version.tar.xz)

build() {

cmake -DCMAKE_BUILD_TYPE=Release  \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_SKIP_RPATH=ON       \
      -DENABLE_GTKDOC=ON \
      -DPORT=GTK                  \
      -DLIB_INSTALL_DIR=/usr/lib  \
      -Hwebkitgtk-$version \
      -Bbuild

cmake --build build
DESTDIR=$PKG cmake --build build --target install
}