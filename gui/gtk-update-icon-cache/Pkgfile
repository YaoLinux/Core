makedepends=(gdk-pixbuf glib atk pango cairo libffi libpng pcre colord)

description="The GTK+ update icon cache tool"
url="http://www.gtk.org/"

packager="Yaolinux Team"
maintainer="rems"

name=gtk-update-icon-cache
version=3.24.23

source=(https://download.gnome.org/sources/gtk+/${version%.*}/gtk+-$version.tar.xz)

build() {

mkdir build && cd build

meson --prefix=/usr \
      -D broadway_backend=true \
      -D cloudproviders=true \
      -D colord=yes \
      -D gtk_doc=true \
      -D man=true
      ../gtk+-$version

ninja
DESTDIR=$PKG ninja install
}

uptodate(){
local lastversion
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
https://download.gnome.org/sources/gtk+/${version:0:4}/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f3`"
echo "$lastversion"
}
