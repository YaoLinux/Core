makedepends=(gstreamer alsa-lib gobject-introspection iso-codes libtheora libvorbis pango mesa)

description="GStreamer Multimedia Framework Base Plugins"
url="http://gstreamer.freedesktop.org/"

packager="Yaolinux Team"
maintainer="rems"

_name=gst-plugins-base 

name=gstreamer-plugins-base
version=1.18.1

source=(http://gstreamer.freedesktop.org/src/${_name}/${_name}-$version.tar.xz)

build() {
cd ${_name}-$version

./configure --prefix=/usr \
            --with-package-name="GStreamer Base Plugins $version YaoLinuX" \
            --with-package-origin="http://downloads.yaolinux.org/"

make
make DESTDIR=$PKG install
} 

uptodate() {
local url ext
name=${_name}
url="https://gstreamer.freedesktop.org/src/$name/"
ext=".tar.xz"
lynx -read_timeout=20 -dump -listonly -nonumbers \
$url|grep $name-[0-9]|grep $ext$|sed "s@$url$name-@@"|sed "s@$ext@@"|tail -1
}
