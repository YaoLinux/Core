makedepends=(dconf iso-codes gobject-introspection gtk2 libnotify vala python python-gobject  libxkbcommon dbus-python python2-xdg)

description="IBus is an Intelligent Input Bus."
url="http://ibus.googlecode.com"
packager="Yaolinux Team"

name=ibus
version=1.5.17
release=2

source=(
# ibus-1.5.18-consolidate-1.patch
	https://github.com/ibus/ibus/releases/download/$version/$name-$version.tar.gz)
build() {
cd $name-$version

# patch -Np1 -i ../ibus-1.5.18-consolidate-1.patch

sed -i 's@/desktop/ibus@/org/freedesktop/ibus@g' \
    data/ibus.schemas.in \
    data/dconf/org.freedesktop.ibus.gschema.xml.in

./configure --prefix=/usr           \
            --sysconfdir=/etc       \
            --enable-gtk-doc        \
            --disable-emoji-dict
rm -f tools/main.c
make
make DESTDIR=$PKG install

# Obsolets libs
rm $PKG/usr/lib/gtk-2.0/2.10.0/immodules/im-ibus.la
rm $PKG/usr/lib/gtk-3.0/3.0.0/immodules/im-ibus.la
rm $PKG/usr/lib/libibus-1.0.la
}
