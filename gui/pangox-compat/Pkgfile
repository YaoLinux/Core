makedepends=(pango glib)

description="X Window System font support for Pango"
url="http://www.pango.org/"

packager="Yaolinux Team"

name=pangox-compat
version=0.0.2+2+gedb9e09
_version=0.0.2
release=2

source=(0001-Re-add-pango_x_get_shaper_map-it-is-still-used-in-th.patch)

prepare() {

git clone https://gitlab.gnome.org/Archive/pangox-compat $name-$_version

cd $name-$_version
git checkout edb9e0904d04d1da02bba7b78601a2aba05aaa47
}

build() {
  cd $name-$_version

  patch -Np1 -i ../0001-Re-add-pango_x_get_shaper_map-it-is-still-used-in-th.patch

  NOCONFIGURE=1 ./autogen.sh

  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --localstatedir=/var \
              --disable-static
  make
}

package() {

  make -C $name-$_version -j1 DESTDIR=$PKG install
}