makedepends=(dbus glibc)

description="Internet Wireless Daemon" 
url="https://git.kernel.org/cgit/network/wireless/iwd.git/"
packager="Yaolinux Team"

name=iwd
version=0.19
release=2

source=(https://www.kernel.org/pub/linux/network/wireless/iwd-${version}.tar.xz
        iwd.tmpfiles)

build() {
  cd $name-$version

      ./configure --prefix=/usr \
	--sysconfdir=/etc/iwd \
	--libexecdir=/usr/lib/iwd \
        --enable-wired \
	--localstatedir=/var
  make
}

package() {
   cd $name-$version
   make install DESTDIR=$PKG
   install -Dm644 $SRC/iwd.tmpfiles $PKG/usr/lib/tmpfiles.d/iwd.conf

}

