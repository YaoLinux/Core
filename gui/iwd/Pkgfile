makedepends=(dbus python-docutils readline)

description="Internet Wireless Daemon" 
url="https://git.kernel.org/cgit/network/wireless/iwd.git/"

packager="Yaolinux Team"
maintainer="Dania"

name=iwd
version=1.1

source=(https://www.kernel.org/pub/linux/network/wireless/$name-$version.tar.xz
        iwd.tmpfiles)

build() {
  cd $name-$version

        ./configure --prefix=/usr \
                    --sysconfdir=/etc \
                    --localstatedir=/var \
                    --runstatedir=/run \
                    --libexecdir=/usr/lib/iwd \
                    --enable-wired \
                    --enable-ofono \
                    --enable-sim-hardcoded \
                    --enable-hwsim \
                    --disable-tools

  make
  make install DESTDIR=$PKG

  install -Dm644 ../iwd.tmpfiles $PKG/usr/lib/tmpfiles.d/iwd.conf
}
