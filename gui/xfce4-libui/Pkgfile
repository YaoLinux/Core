makedepends=(gtk2 gtk3 startup-notification xfce4-conf xfce4-libutil intltool gobject-introspection vala hicolor-icon-theme)

description="Commonly used Xfce widgets among Xfce applications"
url="http://www.xfce.org/"

packager="Yaolinux Team"
maintainer="rems"

name=xfce4-libui
_name=libxfce4ui
version=4.14.1
release=2

source=(http://archive.xfce.org/src/xfce/${_name}/${version%.*}/${_name}-$version.tar.bz2)

build() {

cd ${_name}-$version

	./configure	--prefix=/usr         \
                --sysconfdir=/etc     \
                --libexecdir=/usr/lib/$name \
                --localstatedir=/var  \
                --disable-static      \
                --disable-debug \
                --with-vendor-info='YaoLinuX'
	
	make
	make DESTDIR=$PKG install
	
for i in usr/bin/xfce4-about usr/share/applications/xfce4-about.desktop usr/share/icons/hicolor/48x48/apps/xfce4-logo.png
    do rm $PKG/$i
done
 
}
