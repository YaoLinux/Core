makedepends=(aalib giflib xorg-libxext libtiff freetype xorg-libsm libpng libjpeg-turbo2 libid3tag )

description="library for the management d'images of way more effective that imlib"
url="http://sourceforge.net/projects/enlightenment"
packager="Yaolinux Team"
maintainer="rems"

name=imlib2
version=1.5.1
release=2

source=(http://downloads.sourceforge.net/enlightenment/$name-$version.tar.bz2)
build() {
cd $name-$version
case $(uname -m) in 
	i686)
		EXTRAOPTS="--disable-mmx";;
	x86_64)
		EXTRAOPTS="--disable-amd64";;
esac
./configure --prefix=/usr \
--disable-static \
$EXTRAOPTS
make
make DESTDIR=$PKG install


}
