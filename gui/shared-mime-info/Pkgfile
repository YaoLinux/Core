makedepends=(libxml2 intltool itstool glib)

description="The Shared Mime Info package contains a MIME database."
url="http://freedesktop.org/"

packager="Yaolinux Team"
maintainer="rems"

name=shared-mime-info
version=2.0

_commit=0440063a2e6823a4b1a6fb2f2af8350f

source=(https://gitlab.freedesktop.org/xdg/shared-mime-info/uploads/${_commit}/shared-mime-info-$version.tar.xz)

build() {

unset MAKEFLAGS

cd $name-$version

export ac_cv_func_fdatasync=no

./configure --prefix=/usr \
            --disable-update-mimedb

make
make DESTDIR=$PKG install
} 
