makedepends=(libxml2 intltool itstool glib)

description="The Shared Mime Info package contains a MIME database."
url="http://freedesktop.org/"

packager="Yaolinux Team"
maintainer="rems"

name=shared-mime-info
version=2.0

source=(https://gitlab.freedesktop.org/xdg/shared-mime-info/uploads/aee9ae9646cbef724bbb1bd2ba146556/$name-$version.tar.xz)

build() {

unset MAKEFLAGS

cd $name-$version

export ac_cv_func_fdatasync=no

./configure --prefix=/usr \
            --disable-update-mimedb

make
make DESTDIR=$PKG install
} 
