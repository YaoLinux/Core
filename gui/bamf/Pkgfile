makedepends=(gnome-common libwnck3 libgtop gobject-introspection vala)

description="Application matching framework"
url="https://launchpad.net/bamf"

packager="Yaolinux Team"
maintainer="rems"

name=bamf
version=0.5.4
release=2

source=(https://launchpad.net/bamf/${version%.*}/$version/+download/$name-$version.tar.gz
        bamf-no-gtester2xunit.patch)

build() {
 cd $name-$version

 patch -Np1 -i ../bamf-no-gtester2xunit.patch

 sed -i 's/ -Werror//' configure*

 NOCONFIGURE=1 ./autogen.sh

 ./configure --prefix=/usr \
             --libexecdir=/usr/lib \
             --localstatedir=/var \
             --sysconfdir=/etc \
             --disable-static \
             --disable-webapps

 sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

 make
 make DESTDIR=$PKG install
}
