makedepends=(git)

description="Python Build Reasonableness"
url="https://pypi.python.org/pypi/pbr"

packager="Yaolinux Team"
maintainer="rems"
 
name=python-pbr
version=5.4.3
_name=pbr

PKGMK_KEEP_SOURCES="no"

source=(https://files.pythonhosted.org/packages/99/f1/7807d3409c79905a907f1c616d910c921b2a8e73c17b2969930318f44777/pbr-5.4.3.tar.gz)

build() {

cd pbr-$version
  export PBR_VERSION=$version

python3 setup.py build
python3 setup.py install -O1 --root="$PKG"
}