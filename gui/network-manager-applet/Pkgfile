# Depends on: meson ninja gcr gtk3 iso-codes gobject-introspection libsecret libnotify networkmanager polkit-gnome modemmanager gtk-update-icon-cache jansson

description="Applet for managing network connections."
url="http://www.gnome.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Fanch"

run=(polkit-gnome gtk-update-icon-cache)

name=network-manager-applet
version=1.8.22

source=(http://ftp.gnome.org/pub/gnome/sources/${name}/${version%.*}/${name}-$version.tar.xz)
 
build() {
cd $name-$version

mkdir build
cd    build

meson --prefix=/usr     \
      --sysconfdir=/etc \
      -Dselinux=false   \
      -Dteam=true       \
      -Dmobile_broadband_provider_info=false ..

ninja
DESTDIR=$PKG ninja install
}
uptodate(){
local latest lastversion url
url="http://ftp.gnome.org/pub/gnome/sources/${name}"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f5`"
echo "$lastversion"
}
