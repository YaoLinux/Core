makedepends=(gtk2 xorg-glu xorg-libxmu pangox-compat python)

description="opengl extensions for gtk2"
url="http://gtkglext.sourceforge.net/"

packager="Yaolinux Team"

name=gtkglext
version=1.2.0

source=(http://downloads.sourceforge.net/sourceforge/gtkglext/$name-$version.tar.bz2
        gtk2.20.patch 
        gtkglext-gcc8.patch)

build=autotools

prepare(){
  cd $name-$version

  patch -Np1 -i ../gtk2.20.patch

  sed '/AC_PATH_XTRA/d' -i configure.in  

  patch -p1 -i ../gtkglext-gcc8.patch # Fix build with GCC 8

  autoreconf -vi
}