makedepends=(dbus-glib libusb intltool perl-xml-parser polkit gobject-introspection libgudev pm-utils)

description="To enumerating power devices, listening to device events, querying history and statistics"
url="http://upower.freedesktop.org"
packager="Yaolinux Team"
maintainer="rems"

name=upower
version=0.99.9

source=(http://deb.debian.org/debian/pool/main/u/upower/"$name"_"$version".orig.tar.xz)

build() {

cd $name-$version
./configure --prefix=/usr \
--sysconfdir=/etc \
--enable-deprecated \
--localstatedir=/var \
--disable-static

make
make DESTDIR=$PKG install

}
