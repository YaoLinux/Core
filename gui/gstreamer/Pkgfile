makedepends=(glib libxml2 gsl gobject-introspection)

description="GStreamer Multimedia Framework"
url="http://gstreamer.freedesktop.org/"

packager="Yaolinux Team"
maintainer="rems"

name=gstreamer
version=1.18.1

source=(https://gstreamer.freedesktop.org/src/gstreamer/gstreamer-$version.tar.xz)

build() {
cd gstreamer-$version

./configure --prefix=/usr \
            --with-package-name="GStreamer $version YaoLinuX" \
            --with-package-origin="http://downloads.yaolinux.org/"

make
make DESTDIR=$PKG install
}

uptodate() {
local url ext

url="https://gstreamer.freedesktop.org/src/$name/"
ext=".tar.xz"
lynx -read_timeout=20 -dump -listonly -nonumbers \
$url|grep $name-[0-9]|grep $ext$|sed "s@$url$name-@@"|sed "s@$ext@@"|tail -1
}
