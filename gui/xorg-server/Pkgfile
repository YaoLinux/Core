makedepends=(systemd xorgproto xorg-libxkbfile xorg-font-util xcb-util-keysyms libepoxy xcb-util-image xcb-util-renderutil xcb-util-wm mesa xorg-glu xorg-pixman xorg-libdmx xorg-libxres xorg-libxfont2 xorg-xkeyboard-config wayland xorg-xkbcomp libtirpc)

description="The Xorg Server is the core of the X Window system."
url="http://xorg.freedesktop.org"

packager="Yaolinux Team"
maintainer="rems"

name=xorg-server
version=1.20.7
release=2

source=(http://ftp.x.org/pub/individual/xserver/$name-$version.tar.bz2)

build() {

cd $name-$version

./configure --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --with-xkb-output=/var/lib/xkb \
            --enable-glamor \
            --with-fontrootdir=/usr/share/fonts \
            --enable-install-setuid \
            --enable-systemd-logind \
            --enable-suid-wrapper \
            --enable-config-udev \
            --enable-config-udev-kms

make
make DESTDIR=$PKG install

rm -rf $PKG/var
}
