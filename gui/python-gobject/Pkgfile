# Depends on: python-cairo gobject-introspection xorg-libxxf86vm libffi meson ninja

description="provides the links of Python 3 for the class GObject of GLib."
url="http://www.gnome.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=python-gobject
version=3.30.4

source=(http://ftp.gnome.org/pub/gnome/sources/pygobject/${version%.*}/pygobject-$version.tar.xz)

build() {
cd pygobject-$version
mkdir build
cd    build

meson --prefix=/usr \
-D python=/usr/bin/python3
ninja
DESTDIR=$PKG ninja install
}
uptodate(){
local latest lastversion url
url="http://ftp.gnome.org/pub/gnome/sources/pygobject"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f3`"
echo "$lastversion"
}
