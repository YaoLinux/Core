makedepends=(gtk-doc gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache gtk3 hicolor-icon-theme libarchive)

description="Framework for automatic archive extraction, compression and management."
url="http://www.gnome.org"

packager="Yaolinux Team"

run=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

name=gnome-autoar
version=0.2.4

source=(https://gitlab.gnome.org/GNOME/gnome-autoar/-/archive/$version/gnome-autoar-$version.tar.gz)

build=autotools

build() {

cd $name-$version

NOCONFIGURE=1 ./autogen.sh 

./configure --prefix=/usr \
            --enable-gtk-doc \
            --disable-maintainer-mode \
            --disable-static

make
make DESTDIR="$pkgdir" install
}

