# Depends on: xorg-fontconfig

description=""
packager="YaoLinux Teams"
maintainer="Graknu <Graknu@yaolinux.org>"
url="https://www.google.com/get/noto/#emoji-zsye"

name=font-emojie
version=unhinted
release=1

source=(https://noto-website-2.storage.googleapis.com/pkgs/NotoEmoji-unhinted.zip)


build () {
  mkdir -pv $PKG/usr/share/fonts/noto
  install -m644 NotoEmoji-Regular.ttf $PKG/usr/share/fonts/noto
}

