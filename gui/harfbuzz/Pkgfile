makedepends=(cairo glib icu freetype gobject-introspection git gtk-doc)

description="OpenType text shaping engine"
url="http://www.freedesktop.org/software/harfbuzz"

packager="Yaolinux Team"
maintainer="rems"

name=harfbuzz
version=2.7.2

source=(https://github.com/harfbuzz/harfbuzz/releases/download/$version/harfbuzz-$version.tar.xz)

build() {
cd $name-$version

./configure --prefix=/usr \
            --with-cairo  \
            --with-freetype \
            --with-glib   \
            --with-gobject \
            --with-icu \
            --enable-gtk-doc

make
make DESTDIR=$PKG install
}
