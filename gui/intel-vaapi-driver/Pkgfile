makedepends=(xorg-libdrm libva doxygen wayland)

description="Intel VA-API driver"
url="http://www.intel.com"

packager="Yaolinux Team"
maintainer="rems"

name=intel-vaapi-driver
version=2.3.0

source=(https://github.com/01org/$name/releases/download/$version/$name-$version.tar.bz2
        http://rems.techozor.fr/sources/427.patch)

build() {

cd $name-$version

# https://github.com/intel/intel-vaapi-driver/issues/419
  patch -Np1 -i ../427.patch

./configure --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static

make
make DESTDIR=$PKG install
}