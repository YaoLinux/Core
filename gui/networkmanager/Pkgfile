#Depends on: bluez dbus-glib dhcpcd dnsmasq gobject-introspection gtk-doc iptables iwd libndp newt nss polkit python-gobject systemd vala wpa-supplicant wireless-tools upower

description="Tools which simplify and make the network more directly manageable."
url="http://projects.gnome.org/NetworkManager/"
packager="Yaolinux Team"

alias=(NetworkManager)

name=networkmanager
version=1.20.0
_name=NetworkManager

run=(wpa-supplicant)

source=(http://ftp.gnome.org/pub/gnome/sources/$_name/${version%.*}/$_name-$version.tar.xz)

build() {

cd ${_name}-$version

sed '/initrd/d' -i src/meson.build

grep -rl '^#!.*python$' | xargs sed -i '1s/python/&3/'

mkdir build 
cd    build

CXXFLAGS+="-O2 -fPIC"            \
--prefix /usr              \
      --sysconfdir /etc          \
      --localstatedir /var       \
      -Djson_validation=false    \
      -Dlibaudit=no              \
      -Dlibnm_glib=true          \
      -Dlibpsl=false             \
      -Dnmtui=true               \
      -Diwd=true                 \
      -Dbluez5_dun=true          \
      -Dovs=false                \
      -Dppp=false                \
      -Dselinux=false            \
      -Dqt=false                 \
      -Dudev_dir=/lib/udev       \
      -Dsession_tracking=systemd \
      -Dmodem_manager=false      \
      -Dsystemdsystemunitdir=/lib/systemd/system 
      
ninja

DESTDIR=$PKG install
 
mv -v $PKG/usr/share/doc/NetworkManager{,-$version}

cat > $PKG/etc/NetworkManager/conf.d/polkit.conf << "EOF"
[main]
auth-polkit=true
EOF

cat > $PKG/etc/NetworkManager/conf.d/dhcp.conf << "EOF"
[main]
dhcp=dhclient
EOF

cat > $PKG/etc/NetworkManager/conf.d/no-dns-update.conf << "EOF"
[main]
dns=none
EOF

mkdir -p $PKG/usr/share/polkit-1/rules.d
cat > $PKG/usr/share/polkit-1/rules.d/org.freedesktop.NetworkManager.rules << "EOF"
polkit.addRule(function(action, subject) {
    if (action.id.indexOf("org.freedesktop.NetworkManager.") == 0 && subject.isInGroup("netdev")) {
        return polkit.Result.YES;
    }
});
EOF

}
