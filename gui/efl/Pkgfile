makedepends=(wayland wayland-protocols systemd shared-mime-info luajit giflib librsvg libraw libjpeg-turbo2 xorg-libxrender xorg-fontconfig gstreamer-plugins-base fribidi poppler pulseaudio xorg-libxp libspectre xorg-libxscrnsaver bullet ghostscript imagemagick libinput ibus)

description="Enlightenment Foundatation Libraries"
url="https://www.enlightenment.org"

packager="Yaolinux Team"
maintainer="Dania"

name=efl
version=1.23.3
release=3

run=(shared-mime-info)

source=(https://download.enlightenment.org/rel/libs/$name/$name-$version.tar.xz)

build() {

mkdir -v build && cd build

meson --prefix=/usr \
      -Dfb=true \
      -Ddrm=true \
      -Dwl=true \
      -Dnetwork-backend=connman \
      ../$name-$version

ninja
DESTDIR=$PKG ninja install
}

uptodate() {
local ext url LYNX
LYNX="lynx -read_timeout=20 -dump -listonly -nonumbers "
ext=".tar.xz"
url="https://download.enlightenment.org/rel/libs/$name"
$LYNX $url/?C=M\;O=D|grep "$ext$"|grep "$url/$name-"|sed "s@$ext\$@@"|sed "s@$url/$name-@@"|head -1
}
