makedepends=(itstool intltool gtk-doc libxslt hicolor-icon-theme webkitgtk yelp-xsl desktop-file-utils)

description="A help browser for viewing help files."
url="http://www.gnome.org/"
packager="Yaolinux Team"
maintainer="rems"

name=yelp
version=3.30.0
release=2

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {

cd $name-$version
./configure --prefix=/usr --disable-static
make
make DESTDIR=$PKG install
# Obsolets libs
rm $PKG/usr/lib/libyelp.la
rm $PKG/usr/lib/yelp/web-extensions/libyelpwebextension.la
}
uptodate(){
local latest lastversion url
url="http://ftp.gnome.org/pub/gnome/sources/${name}"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f3`"
echo "$lastversion"
}
