makedepends=(gtk2 gtk3 gstreamer-plugins-base libnotify xorg-libsm xorg-libxxf86vm xorg-glu gconf webkitgtk)

description="GTK+ implementation of wxWidgets API for GUI"
url="http://wxwidgets.org"

packager="Yaolinux Team"
maintainer="rems"

name=wxgtk
version=3.0.5.1
release=2

source=(https://github.com/wxWidgets/wxWidgets/releases/download/v$version/wxWidgets-$version.tar.bz2
	    make-abicheck-non-fatal.patch)

prepare() {

  cd wxWidgets-${version}

  patch -Np1 -i ../make-abicheck-non-fatal.patch
  
}

build() {

  cd wxWidgets-${version}

  ./autogen.sh

  ./configure --prefix=/usr \
              --libdir=/usr/lib \
              --with-gtk=3 \
              --with-opengl \
              --enable-unicode \
              --enable-graphics_ctx \
              --enable-mediactrl \
              --with-regex=builtin \
              --with-libpng=sys \
              --with-libxpm=sys \
              --with-libjpeg=sys \
              --with-libtiff=sys \
              --disable-precomp-headers

  make
  make -C locale allmo
}

package() {

	make -C wxWidgets-$version DESTDIR=$PKG install
}
