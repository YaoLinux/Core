makedepends=(dbus-x11 libconfig libev pcre mesa xorg-pixman xcb-util-renderutil xcb-util-image uthash hicolor-icon-theme)

description="A compositor for X, and a fork of xcompmgr-dana."
url="http://github.com/chjj/compton"

packager="Yaolinux Team"
maintainer="rems"

name=picom
version=8.2

PKGMK_KEEP_SOURCES="no"

source=(https://github.com/yshui/picom/archive/v$version.tar.gz
	picom.conf)

run=(libconfig)

build() {

mkdir -pv build && cd build

meson --prefix=/usr ../picom-$version

ninja
DESTDIR=$PKG ninja install

install -Dm644 ../picom.conf $PKG/etc/xdg/picom.conf
}
