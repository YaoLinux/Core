makedepends=(dbus libconfig libev pcre mesa xorg-libxcomposite xorg-libxinerama xorg-libxrandr xorg-libxdamage freeglut xcb-util-renderutil xcb-util-image)

description="A compositor for X, and a fork of xcompmgr-dana."
url="http://github.com/chjj/compton"

packager="Yaolinux Team"
maintainer="rems"

name=compton
version=7.4

PKGMK_KEEP_SOURCES="no"

source=(https://github.com/yshui/compton/archive/v$version.tar.gz
		compton.conf)

run=(libconfig)

build() {

mkdir -pv build && cd build

meson --prefix=/usr ../picom-$version

ninja
DESTDIR=$PKG ninja install

install -Dm644 $SRC/compton.conf $PKG/etc/xdg/compton.conf
}