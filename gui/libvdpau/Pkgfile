# Depends on: xorg-libxfixes doxygen graphviz

description="Video Acceleration vdpau for Linux"
url="https://01.org/linuxmedia/vaapi"
maintainer="remy"
packager="Yaolinux Team"

name=libvdpau
version=1.2

source=(https://people.freedesktop.org/~aplattner/vdpau/$name-$version.tar.bz2)

build() {

cd $name-$version
./configure --prefix=/usr
make
make DESTDIR=$PKG install

# Obsolets libs
rm $PKG/usr/lib/libvdpau.la
rm $PKG/usr/lib/vdpau/libvdpau_trace.la
}
