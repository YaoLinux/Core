makedepends=(systemd libcdio-paranoia avahi dbus-glib libgdata libgudev libbluray intltool libsecret gtk3 libsoup udisks2 obexd fuse2 libarchive libmtp samba bluez gcr libgphoto2)

description="Userspace virtual filesystem implemented as a pluggable module for gio"
url="http://www.gnome.org/"
packager="Yaolinux Team"
maintainer="rems"

name=gvfs
version=1.40.2
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz
       handle-inactive-vfs.patch)

build() {
cd $name-$version

patch -Np1 -i ../handle-inactive-vfs.patch

mkdir build &&
cd    build &&

--prefix=/usr     \
      --sysconfdir=/etc \
      -Dgphoto2=true    \
      -Dafc=false       \
      -Dnfs=false       \
      -Ddnssd=false     \
      -Dgoa=false       \
      -Dgoogle=false    \
      -Dsystemduserunitdir=/usr/lib/systemd/user ..
ninja

DESTDIR=$PKG install
}

uptodate(){
local latest lastversion url
url="http://ftp.gnome.org/pub/gnome/sources/$name"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f3`"
echo "$lastversion"
}
