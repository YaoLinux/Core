makedepends=(glib libjpeg-turbo2 cyrus-sasl lz4 opus xorg-pixman git libcacard python2-pyparsing python2-six spice-protocol gdk-pixbuf)

description="A spice server"
url="https://www.spice-space.org/"

packager="Yaolinux Team"
maintainer="rems"

name=spice
version=0.14.2
release=2

source=(https://www.spice-space.org/download/releases/$name-server/$name-$version.tar.bz2)

build() {

cd $name-$version

PYTHON=python2 \
./configure --prefix=/usr \
            --disable-static \
            --enable-smartcard \
            --enable-client \
            --disable-werror \
            --disable-celt051

make
make DESTDIR=$PKG install
}
