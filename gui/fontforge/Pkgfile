makedepends=(xorgproto m4 shared-mime-info freetype libxml2 cairo gtk2 pango desktop-file-utils shared-mime-info giflib libjpeg-turbo2 libpng libtiff libuninameslist)

description="Outline and bitmap font editor"
url="http://fontforge.sourceforge.net"

packager="Yaolinux Team"
maintainer="rems"

name=fontforge
version=20190801
release=4

run=(shared-mime-info)

source=(https://github.com/${name}/${name}/releases/download/${version}/${name}-${version}.tar.gz)

build() {
    cd $name*

    ./configure --prefix=/usr \
                --enable-gtk2-use \
                --disable-static  \
                --docdir=/usr/share/doc/$name-$version

    make
    make DESTDIR=$PKG install
}
