makedepends=(ca-certificates cmake libgdiplus python zlib git)
 
description="Free implementation of the .NET"
url="http://www.mono-project.com/"

packager="Yaolinux Team"
 
name=mono
version=6.0.0.334

source=(https://download.mono-project.com/sources/mono/mono-$version.tar.bz2
        mono.binfmt.d)

build() {
cd $name-$version

./autogen.sh \
--prefix=/usr \
--sysconfdir=/etc \
--bindir=/usr/bin \
--sbindir=/usr/bin \
--disable-quiet-build \
--with-mcs-docs=no

make get-monolite-latest

make
make -C mcs/jay

make DESTDIR=$PKG install
make -C mcs/jay DESTDIR=$PKG prefix=/usr INSTALL=../../install-sh install

# install binfmt conf file and pathes
install -D -m644 ../mono.binfmt.d $PKG/usr/lib/binfmt.d/mono.conf



}
